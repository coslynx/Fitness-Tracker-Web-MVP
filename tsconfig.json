{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": [
      "node",
      "next-auth",
      "jest",
      "react-router-dom"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "next.config.js",
    "pages/**/*.{ts,tsx}",
    "components/**/*.{ts,tsx}",
    "styles/**/*.{ts,tsx}",
    "lib/**/*.{ts,tsx}",
    "types/**/*.{ts,tsx}",
    "context/**/*.{ts,tsx}",
    "services/**/*.{ts,tsx}",
    "config/**/*.{ts,tsx}",
    "prisma/**/*.{ts,tsx}",
    "test/**/*.{ts,tsx}"
  ],
  "exclude": [
    "node_modules"
  ]
}